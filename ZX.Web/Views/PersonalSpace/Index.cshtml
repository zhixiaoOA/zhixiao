                                                    if (percent < 90 && temporaryTask.TState != 4)
                                                    {
                                                        <div class="circular green" title="进度已达(@percent)%"></div>
                                                    }
                                                    //进度到了90% 亮灯控制
                                                    if (percent >= 90 && percent < 100 && temporaryTask.TState != 4)

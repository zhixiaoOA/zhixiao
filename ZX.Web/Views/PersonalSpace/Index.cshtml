@using ZX.Model
@using ZX.BLL
@using ZX.Tools
@using System.Linq
@{
    ViewBag.Title = "个人空间-首页-指效";
    int userId = Session["UserId"].ToInt();
    int positionId = Session["PositionId"].ToInt();
    List<SelectListItem> list = ViewBag.UserList;
    DateTime? currentTime = ViewBag.CurrentTime;
}
